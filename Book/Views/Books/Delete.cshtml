@model BookstoreApp.Models.Bookmodel

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>
<div>
    <strong>Title:</strong> @Model.Title<br />
    <strong>Author:</strong> @Model.Author<br />
    <strong>Price:</strong> @Model.Price<br />
    <strong>Publication Year:</strong> @Model.PublicationYear
</div>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
